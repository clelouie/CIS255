import java.util.Scanner;

public class TriangleArea {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);
      
      Triangle triangle1 = new Triangle();
      Triangle triangle2 = new Triangle();

      triangle1.setBase(scnr.nextInt());
      triangle1.setHeight(scnr.nextInt());
      
      triangle2.setBase(scnr.nextInt());
      triangle2.setHeight(scnr.nextInt());      
      
      System.out.println("Triangle with smaller area:");
      
      // TODO: Determine smaller triangle (use getArea())
      //       and output smaller triangle's info (use printInfo())
      
      if (triangle1.getArea() > triangle2.getArea()) {
    	  triangle1.printInfo();
      }
      else {
    	  triangle2.printInfo();
      }
      
   }
}
